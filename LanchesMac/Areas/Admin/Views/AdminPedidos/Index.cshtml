@model ReflectionIT.Mvc.Paging.PagingList<LanchesMac.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Pedidos</h1>

<section>
    <div class="form-control">
        <div class="row col-12">
            <form method="get">
                <input name="filter" class="form-group col-12 col-lg-9 col-md-9" placeholder="filtro"
                       value="@Model.RouteValue["Filter"]" />
                <button type="submit" class="form-group text-light btn btn-info col-6 col-lg-1 col-md-1">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>Procurar
                </button>
            </form>
        </div>
    </div>
    <div class="row">
        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Sobrenome)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Endereco1)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Endereco2)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.CEP)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Cidade)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PedidoEnviado)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                    </th>
                    <th scope="col">
                        Opções
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr scope="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sobrenome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CEP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.PedidoEnviado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.PedidoId">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.PedidoId">Excluir</a> |
                            <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Ver Itens</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <vc:pager paging-list="@Model"></vc:pager>
        </div>
        Total de Pedidos : @Model.TotalRecordCount
    </div>
</section>